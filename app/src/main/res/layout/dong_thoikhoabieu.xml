<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/b"
    android:weightSum="2"
    android:padding="5dp">

    <LinearLayout
        android:layout_weight="0.5"
        android:layout_width="156dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewThu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:text="Thứ Hai"
            android:textAlignment="center"
            android:textColor="#FA7400"
            android:textSize="27sp"
            android:textStyle="bold" />

        <TextView
            android:textStyle="italic"
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="12dp"
            android:text="Buổi sáng"
            android:textColor="#660EE3"
            android:textSize="20sp" />

        <TextView

            android:id="@+id/textViewTKBBuoisang"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="276dp"
            android:textColor="#F30635"
            android:textStyle="bold"
            android:textSize="18sp" />

        <TextView
            android:textStyle="italic"
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:text="Buổi chiều"
            android:textColor="#660EE3"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textViewTKBchieu"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="276dp"
            android:textColor="#F30635"
            android:textStyle="bold"
            android:textSize="18sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_weight="0.5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_marginTop="10dp"
            android:background="@null"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/edit"
            android:id="@+id/imgEdit"></ImageView>

        <ImageView
            android:layout_marginTop="10dp"
            android:background="@null"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/delete"
            android:id="@+id/imgDelete"></ImageView>

    </LinearLayout>

</LinearLayout>