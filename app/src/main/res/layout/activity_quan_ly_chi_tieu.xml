<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    android:layout_weight="5"
    tools:context=".ActivityQuanLyChiTieu">

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_weight="0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout

            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ví của tôi"
                android:textAlignment="center"
                android:textColor="#081881"
                android:textSize="15sp"
                android:textStyle="italic"></TextView>

            <ImageView
                android:layout_gravity="center"
                android:id="@+id/imageViewDSVi"
                android:layout_width="50dp"
                android:layout_height="40dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/vimain" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:textColor="#E60868"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên ví: " />
            <TextView
                android:textColor="#0A7A19"
                android:textStyle="italic"
                android:layout_marginTop="10dp"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số tiền: " />

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:textColor="#0F1AE1"
                android:textStyle="bold"
                android:textSize="20dp"
                android:id="@+id/textViewTenViMain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên ví" />
            <TextView
                android:textColor="#7619F6"
                android:textStyle="italic"
                android:layout_marginTop="10dp"
                android:textSize="15dp"
                android:id="@+id/textViewSotienMain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số tiền" />
        </LinearLayout>


        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:textColor="#0F1AE1"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 />
            <TextView
                android:textColor="#7619F6"
                android:textStyle="italic"
                android:layout_marginTop="10dp"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vnđ" />
        </LinearLayout>
    </LinearLayout>

    <ListView
        android:layout_marginTop="10dp"
        android:layout_weight="5"
        android:id="@+id/listviewGiaoDich"
        android:layout_width="match_parent"
        android:layout_height="400dp"
       />



    <ImageView
        android:layout_gravity="center"
        android:layout_weight="0.5"
        android:id="@+id/buttonThemgiaodich"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/trade"
        />

</LinearLayout>