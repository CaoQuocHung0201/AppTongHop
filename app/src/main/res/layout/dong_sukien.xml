<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:weightSum="5"
    android:orientation="horizontal"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_weight="5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:textStyle="bold"
            android:textColor="#E80606"
            android:textSize="30dp"
            android:text="Tên sự kiện"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textviewTensukien"></TextView>
        <TextView
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:textColor="#2889DD"
            android:textSize="20dp"
            android:text="Mô tả"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textviewMotasukien"></TextView>
        <TextView
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:textColor="#13717E"
            android:textSize="20dp"
            android:text="Địa điểm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textviewDiadiemsukien"></TextView>
        <TextView
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:textColor="#AA18AF"
            android:textSize="20dp"
            android:text="Ngày sự kiện"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textviewNgaysukien"></TextView>
        <TextView
            android:layout_marginTop="5dp"

            android:textStyle="bold"
            android:textColor="#030CC8"
            android:textSize="20dp"
            android:text="Giờ sự kiện"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textviewGiosukien"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_marginTop="50dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/edit"
            android:id="@+id/imgSuasukien"></ImageView>
        <ImageView
            android:layout_marginTop="20dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/delete"
            android:id="@+id/imgXoasukien"></ImageView>
    </LinearLayout>

</LinearLayout>